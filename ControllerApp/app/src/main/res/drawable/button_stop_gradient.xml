<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF5252"
                android:centerColor="#E53935"
                android:endColor="#D32F2F"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#FF8A80"/>
        </shape>
    </item>
    
    <!-- Normal State -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#FF5252"
                        android:centerColor="#E53935"
                        android:endColor="#D32F2F"
                        android:type="linear"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- Main button -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#FF8A80"
                        android:centerColor="#FF5252"
                        android:endColor="#E53935"
                        android:type="linear"/>
                    <corners android:radius="16dp"/>
                    <stroke android:width="1dp" android:color="#1BFFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
