    <style name="Theme.RescueRobotController" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/cyan_accent</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>